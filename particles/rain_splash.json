{
  "format_version": "1.21.60",
  "particle_effect": {
    "description": {
      "identifier": "minecraft:rain_splash_particle",
      "basic_render_parameters": {
        "material": "particles_blend",
        "texture": "textures/particle/rain_splash"
      }
    },

    "components": {

      "minecraft:emitter_lifetime_expression": {
        "activation_expression": 1,
        "expiration_expression": 0
      },

      "minecraft:emitter_rate_manual": {
        "max_particles": 210
      },

      "minecraft:emitter_shape_point": {
        "offset": [0.0, -0.16, 0.0]
      },

      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "0.65 + variable.particle_random_1 * 0.55"
      },

      "minecraft:particle_initial_speed": 0.0,

      "minecraft:particle_initial_spin": {
        "rotation": "variable.particle_random_2 * 360"
      },

      "minecraft:particle_motion_collision": {
        "collision_radius": 0.01,
        "collision_drag": 8.5,
        "coefficient_of_restitution": 0.0
      },

      "minecraft:particle_expire_if_not_in_blocks": [
        "minecraft:air"
      ],

      "minecraft:particle_appearance_billboard": {
        "facing_camera_mode": "emitter_transform_xz",
        "size": [
          "0.22 + variable.particle_random_1 * 0.06",
          "0.22 + variable.particle_random_1 * 0.06"
        ],
        "uv": {
          "texture_width": 144,
          "texture_height": 16,
          "uv": [
            "math.floor((variable.particle_age / variable.particle_lifetime) * 9) * 16",
            0
          ],
          "uv_size": [16, 16]
        }
      },

      "minecraft:particle_appearance_tinting": {
        "color": {
          "interpolant": "variable.particle_age / variable.particle_lifetime",
          "gradient": {
            "0.0":  [1.0, 1.0, 1.0, 0.0],
            "0.25": [1.0, 1.0, 1.0, 0.6],
            "0.7":  [1.0, 1.0, 1.0, 0.25],
            "1.0":  [1.0, 1.0, 1.0, 0.0]
          }
        }
      },

      "minecraft:particle_appearance_lighting": {}
    }
  }
}
